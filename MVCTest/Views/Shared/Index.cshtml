<div id="section3" class="container-fluid">
    <div class="row opake" align="center">
        <div class="col-md-12 padding-50">
            <h2>Contact</h2>
        </div>
    </div>

    <div class="row padding-50">
        <div class="col-md-1">

        </div>

        <div class="col-md-6">

            <form asp-action="Confirmed" asp-controller="Contact">
                @Html.ValidationSummary()
                <div class="form-group">
                    <label for="Name">Name:</label>
                    <input type="text" asp-for="Name" class="form-control input-lg" id="name" placeholder="Enter Name" name="Name">
                </div>
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" asp-for="Email" class="form-control input-lg" id="email" placeholder="Enter Email" name="Email">
                </div>
                <div class="form-group">
                    <label for="Name">Message:</label>
                    <textarea asp-for="Message" class="form-control input-lg" id="message" placeholder="Enter Message" name="Message"></textarea>
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
            </form>

        </div>

        <div class="col-md-5">
            <!-- Reference to the Bing Maps SDK -->
            <script type='text/javascript'
                    src='https://www.bing.com/api/maps/mapcontrol?callback=GetMap&key=Ap9MbStwAZ869U23vwgmclum0A-SDh8lzs2oi4HklzkkffvbgxzKZswZrXl1ttr8'
                    async defer></script>

            <script type='text/javascript'>
                function GetMap() {
