
@{
    ViewData["Title"] = "ShoppingCart";

}

<div class="row opake">
    <div class="col-md-12 padding-50" align="center">
        <h2>Cart</h2>
    </div>
</div>

<div class="container">
   
    <div class="col-md-4 padding-10" align="center">
        <h3>Items:</h3>
        @foreach (Product p in ViewBag.Cart)
        {
                <a href="#"><img class="img-responsive center-block" src="~/images/@p.ProductImage" border="0"></a>
                <h3>@p.ProductName</h3>
                <div class="bboarder"></div>
                <div class="fontsize"><p>Price: @string.Format("{0:C}", p.ProductPrice)</p></div>
                <button class="button button4" onclick="location.href='@Url.Action("Remove", "Cart", new { id = p.ProductID })'">Remove</button>

        }

    </div>

        <div class="col-md-4 padding-10" align="center">

        </div>

        <div class="col-md-4 padding-10" align="center">
            <h1>Total:</h1>
            <h3>@ViewBag.Total</h3>

        </div>
    
</div>

